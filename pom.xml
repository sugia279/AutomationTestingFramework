                    <!--<browserType>${browserType}</browserType>-->
                    <!--<onlineReport>${onlineReport}</onlineReport>-->
                    <!--<buildName>${buildName}</buildName>-->
                    <!--<PID_Desc>${PID_Desc}</PID_Desc>-->
                    <!--<category>${category}</category>-->
                    <!--<testcaseName>${testcaseName}</testcaseName>-->

                    <!--</systemPropertyVariables>-->


                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.7.0</version>
                <configuration>
                    <source>8</source>
                    <target>8</target>
                </configuration>
            </plugin>

        </plugins>
    </build>
